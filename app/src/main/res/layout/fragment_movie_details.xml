<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView android:id="@+id/imageViewPoster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTitle"
        android:layout_margin="@dimen/fab_margin"
        />

    <RatingBar
        android:id="@+id/ratingBarUserRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageViewPoster"
        android:layout_below="@+id/textViewTitle"
        android:layout_toLeftOf="@+id/textViewTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="1.0"
    />

    <TextView android:id="@+id/textViewOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBarUserRating"
        android:layout_alignLeft="@+id/ratingBarUserRating"
        android:layout_alignStart="@+id/ratingBarUserRating" />

</RelativeLayout>